@charset "UTF-8";

.page {
    height: 100%;
    padding-top: 20rpx;
}

.store_item {
    padding: 30rpx 30rpx 20rpx;
}

.weui-cells {
    margin-top: 0rpx;
    margin-bottom: 20rpx;
}

.weui-cells::after,.weui-cells::before {
    border: none;
}

.weui-media-box__thumb {
    border-radius: 60rpx;
    width: 100rpx;
    height: 100rpx;
}

.store_location {
    width: 50rpx;
    height: 50rpx;
    top: -10rpx;
    left: -10rpx;
    position: absolute;
}

.weui-media-box__desc {
    padding-left: 40rpx;
    font-size: 22rpx;
    line-height: 32rpx;
}

.story-item-img {
    height: 180rpx;
    width: 180rpx;
}