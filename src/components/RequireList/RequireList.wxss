@charset "UTF-8";

@import "../../../__wuBaseWxss__/7.wxss";

.kp-nowrap {
    white-space: nowrap;
}

.kp-radio-list {
    margin-right: -30rpx;
    font-size: 0;
}

.kp-radio {
    position: relative;
    display: inline-block;
    min-width: 140rpx;
    line-height: 60rpx;
    margin-right: 30rpx;
    margin-bottom: 10rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
    color: #444;
    text-align: center;
}

.kp-line-radio {
    color: #7f7f7f;
    border-bottom: 4rpx solid #fff;
}

.kp-square-radio,.kp-checking-radio {
    background-color: #f5f5f5;
    border-radius: 6rpx;
    overflow: hidden;
}

.kp-radio.actived {
    color: #ff9f00;
    border-color: #ff9f00;
}

.kp-square-radio.actived,.kp-checking-radio.actived {
    background-color: #fef5e6;
}

.kp-checking-actived-icon {
    position: absolute;
    bottom: 0;
    right: 0;
    z-index: 1;
}

.kp-square-has-border {
    border-color: #dddddd;
}

.kp-square-badge .kp-actived-icon,.kp-square-actived-badge .kp-actived-icon {
    position: absolute;
    bottom: 0;
    right: 0;
    z-index: 1;
}

.kp-line-badge .kp-actived-icon,.kp-line-actived-badge .kp-actived-icon {
    position: absolute;
    top: 35%;
    right: 0;
    z-index: 1;
}

.kp-line-badge image {
    width: 14rpx;
    height: 14rpx;
}

.kp-square-badge image {
    width: 31rpx;
    height: 31rpx;
}