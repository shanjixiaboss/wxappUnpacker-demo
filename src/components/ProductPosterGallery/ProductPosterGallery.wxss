.kpc-ppg-container {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 99;
    background-color: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
}

.close-container {
