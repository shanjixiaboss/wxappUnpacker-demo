@import "../../../__wuBaseWxss__/7.wxss";

.kp-modal-wrapper {
    position: fixed;
    overflow: scroll;
}

.kp-mask {
    position: absolute;
    background-color: rgba(0,0,0,0.5);
}

.kp-modal-wrapper,.kp-mask {
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}

.kp-modal-wrapper,.kp-mask,.kp-modal {
    z-index: 15;
}

.kp-modal {
    position: absolute;
    top: 5%;
    left: 50%;
    width: 80%;
    padding-top: 30rpx;
    transform: translate(-50%,0);
    background-color: #fff;
    border-radius: 10rpx;
}

.kp-title {
    font-size: 32rpx;
    font-weight: 400;
    text-align: center;
    margin-bottom: 28rpx;
}

.kp-button-wrapper {
    position: relative;
    z-index: 1;
    font-size: 36rpx;
    font-weight: 400;
    text-align: center;
    border-top: 1rpx solid #e5e5e5;
}

.kp-button-wrapper view {
    padding: 25rpx;
}

.kp-cancel {
    color: #666;
    border-right: 1px solid #e5e5e5;
}

.kp-confirm {
    color: #ff9f00;
}