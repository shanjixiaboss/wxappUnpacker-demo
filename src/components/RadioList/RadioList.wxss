@charset "UTF-8";

@import "../../../__wuBaseWxss__/7.wxss";

.kp-radio-list {
    font-size: 0;
}

.kp-nowrap {
    white-space: nowrap;
}

.kp-radio {
    position: relative;
    display: inline-block;
    min-width: 140rpx;
    line-height: 60rpx;
    margin: 34rpx 30rpx 10rpx 0;
    padding: 0 30rpx;
    font-size: 28rpx;
    color: #444;
    background-color: #f5f5f5;
    border-radius: 6rpx;
    text-align: center;
    overflow: hidden;
}

.kp-radio:last-child {
    margin-right: 0;
}

.kp-radio.actived {
    color: #ff9f00;
    border-color: #ff9f00;
    background-color: #fef5e6;
}

.kp-actived-icon {
    position: absolute;
    bottom: 0;
    right: 0;
    z-index: 1;
    width: 31rpx;
    height: 31rpx;
}

.unit-modal .kp-radio {
    min-width: 168rpx;
    line-height: 88rpx;
    border-radius: 4rpx;
    font-size: 40rpx;
}