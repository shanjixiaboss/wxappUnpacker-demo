@charset "UTF-8";

@import "../templates/load-more.wxss";

@import "../templates/complete-info.wxss";

@import "../templates/place-order-modal.wxss";

@import "../templates/unit-modal.wxss";

@import "../../__wuBaseWxss__/6.wxss";

.container {
    height: 100%;
    background: #fff;
}

.kp-brief-header {
    align-items: center;
    justify-content: space-between;
    color: #fff;
    background-color: #ff9f00;
    padding: 15rpx 30rpx 0;
}

.kp-brief-header .kp-avatar {
    border: 2rpx solid #fff;
    border-radius: 26rpx;
    height: 125rpx;
    width: 125rpx;
}

.kp-brief-header .kp-info {
    flex-direction: column;
    flex: 1;
    min-width: 200rpx;
    font-size: 26rpx;
}

.kp-brief-header .kp-info image {
    height: 50rpx;
    width: 50rpx;
}

.kp-brief-header .kp-info .item {
    align-items: center;
}

.kp-brief-header .kp-share-store-button {
    align-self: flex-start;
    padding: 0;
    margin-left: 15rpx;
    background-color: transparent;
}

.kp-brief-header .kp-share-store {
    width: 48rpx;
    height: 48rpx;
    margin-top: 8rpx;
}

button::before,button::after {
    border: 0;
}

.kp-fix-section {
    width: 100%;
}

.kp-search-box {
    z-index: 10;
    align-items: center;
    height: 98rpx;
    padding: 15rpx 30rpx;
    background-color: #ff9f00;
}

.kp-search-box image,.kp-menu-list image {
    width: 48rpx;
    height: 48rpx;
}

.kp-search-box .kp-search-input {
    align-items: center;
    height: 100%;
    margin: 0 30rpx;
    background-color: #fff;
    border-radius: 35rpx;
}

.kp-search-box .kp-search-input icon {
    padding: 0 20rpx;
}

.kp-search-box .kp-search-input text {
    font-size: 26rpx;
    color: rgba(0,0,0,0.25);
}

.kp-classify-container {
    height: calc(100% - 99rpx);
    display: flex;
    align-items: stretch;
}

.kp-classify-aside,.kp-classify-main {
    height: 100%;
    overflow-y: hidden;
}

.kp-classify-aside {
    flex-shrink: 0;
    width: 160rpx;
}

.kp-classify-main {
    flex-grow: 1;
}

.kp-menu-list {
    height: 100%;
    background-color: #f8f8f8;
    color: rgba(0,0,0,0.9);
}

.kp-menu-item {
    width: 160rpx;
    padding: 24rpx 20rpx;
}

.kp-menu-item.active {
    color: #ff9f00;
    background-color: #fff;
}

.kp-menu-item text {
    line-height: 40rpx;
    text-align: left;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.kp-menu-item image {
    float: left;
    display: block;
    width: 38rpx;
    height: 38rpx;
    margin: 0 10rpx 0 0;
}

.scroll-view-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: stretch;
}

.product-scroll-view-container {
    flex-grow: 1;
    overflow: auto;
    position: relative;
}

.product-scroll-view {
    position: absolute;
    top: 0;
    bottom: 0;
}

.no-bg-img {
    background-image: initial;
}

::-webkit-scrollbar {
    display: none;
}

.list-style .kp-small-note,.block-style .kp-small-note {
    text-decoration: line-through;
    margin-bottom: 10rpx;
    display: inline-block;
}

.kp-message-wrapper {
    flex-direction: column;
    justify-content: flex-start;
    flex-grow: 1;
}

.kp-current-msg {
    flex-direction: column;
}

.kp-number-input {
    position: relative;
    display: flex;
    justify-content: flex-end;
}

.multi-specs-tap-hover {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 3;
}

.default-product-list {
    padding-left: 20rpx;
    background-color: #fff;
}

.list-style {
    position: relative;
    width: 100%;
    height: 296rpx;
    flex-direction: column;
    align-items: stretch;
}

.list-style .kp-current-msg {
    overflow-x: auto;
    overflow-y: hidden;
}

.block-product-list {
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx;
    background-color: #fff;
}

.block-style {
    position: relative;
    width: 270rpx;
    height: 518rpx;
    margin-bottom: 10rpx;
    flex: 1;
    justify-content: space-around;
}

.block-style:nth-child(odd) {
    margin-right: 10rpx;
}

.block-style .kp-current-msg {
    height: 48rpx;
    line-height: 48rpx;
}

.block-style:last-child:nth-child(odd) {
    flex: initial;
    width: calc(50% - 10rpx);
}

.no-result {
    background: #fff;
    text-align: center;
    padding: 130rpx 0;
    height: 100%;
}

.no-result image {
    display: block;
    margin: 0 auto;
    height: 300rpx;
    width: 500rpx;
}

.no-result text {
    position: relative;
    color: rgba(0,0,0,0.25);
    font-size: 28rpx;
}

.kp-loadmore .kp-loadmore__tips_text {
    background-color: #fff;
}