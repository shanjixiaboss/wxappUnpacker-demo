@import "../../__wuBaseWxss__/7.wxss";

@charset "UTF-8";

@font-face {
    font-family:'icomoon';src:url(data:application/font-woff;charset=utf-8;base64,) format("woff");font-weight:normal;font-style:normal;
}

@import "../templates/place-order-modal.wxss";

.kp-page {
    border-top: 1rpx solid #f1f1f1;
}

.kp-edit {
    padding: 10rpx 30rpx;
    color: #ff9f00;
    background-color: #ffffff;
    border-bottom: 1rpx solid #f1f1f1;
    text-align: right;
}

.kp-total-infor {
    flex-direction: column;
    justify-content: center;
}

.kp-select-box {
    font-size: 30rpx;
    margin-top: 10rpx;
}

.kp-empty-cart {
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: rgba(0,0,0,0.25);
    text-align: center;
    padding-top: 190rpx;
    font-size: 28rpx;
}

.kp-empty-cart-image {
    height: 300rpx;
    width: 500rpx;
}

.kp-half-black {
    color: rgba(0,0,0,0.5);
}

.header {
    height: 50rpx;
    padding: 0 30rpx;
    color: #fff;
    font-size: 30rpx;
    background-color: #488af3;
    text-align: center;
    box-shadow: 0 1rpx 0 0 rgba(0,0,0,0.1);
}

.kp-warning-title {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 30rpx;
    color: #fff;
    font-size: 28rpx;
    font-weight: 300;
    background-color: #ff9f00;
    box-shadow: 0 1rpx 0 0 rgba(0,0,0,0.1);
}

.kp-warning-title::before {
    font-family: 'icomoon';
    content: "\ea0c";
    color: #fff;
    font-size: 28rpx;
    font-weight: 300;
    height: 70rpx;
    line-height: 70rpx;
    vertical-align: bottom;
}

.kp-icon {
    margin-top: -4rpx;
    line-height: 0;
}

.list-style .kp-small-note {
    width: 100%;
    margin-bottom: 10rpx;
    display: inline-block;
}

.kp-current-msg {
    justify-content: space-between;
    align-items: flex-end;
}

.list-style {
    width: 100%;
}

.list-style .kp-current-msg {
    overflow-x: auto;
    overflow-y: hidden;
}

.list-style .kp-message-wrapper {
    flex-direction: column;
    justify-content: space-between;
}

.kp-total-price {
    font-size: 32rpx;
}

.kp-total-amount {
    color: #999;
}